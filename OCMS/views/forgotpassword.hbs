<center>
<div class="login-detail">
		<h2>Reset Your Password</h2>
		<hr>
		<form action="/forgotpassword" method="POST">
		<input required type="text" placeholder="Enter Email Address Or Phone No" name="emailphno">
		
		<input required type="password" placeholder="Enter New Password" name="pwd">

        <input required type="password" placeholder="Retype Password" name="rpwd">
		
		<button type="submit">Confirm Reset</button>
		</form>
		<br>
    {{#if success}}<p style="color:forestgreen;">{{success}} <a href="/login">Click here to login</a></p>{{/if}}
	{{#if Error}}<p style="color:red;">{{Error}}</p>{{/if}}
	</div>
</center>
